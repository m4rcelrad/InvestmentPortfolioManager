<UserControl x:Class="InvestmentPortfolioManager.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding WelcomeMessage}" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <WrapPanel>
                <Border Background="#EEE" Width="200" Height="100" Margin="10" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Całkowita Wartość:" Foreground="Gray"/>
                        <TextBlock Text="{Binding TotalValue, StringFormat={}{0:C}}" FontSize="20" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>
                </Border>

                <Border Background="#EEE" Width="200" Height="100" Margin="10" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Poziom Ryzyka:" Foreground="Gray"/>
                        <TextBlock Text="{Binding PortfolioRiskLevel}" FontSize="16" FontWeight="Bold" Foreground="OrangeRed"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>