<UserControl x:Class="InvestmentPortfolioManager.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:InvestmentPortfolioManager.WPF.MVVM"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel}"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" 
                Background="#2980B9" CornerRadius="8" Padding="20" Margin="0,0,10,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Total value" 
                           Foreground="White" Opacity="0.8" FontSize="14" Margin="0,0,0,5"/>

                <TextBlock Text="{Binding TotalValue, StringFormat=C2}" 
                           Foreground="White" FontSize="36" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" 
                CornerRadius="8" Padding="20" Margin="10,0,0,20">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="#95A5A6"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsProfitPositive}" Value="True">
                            <Setter Property="Background" Value="#27AE60"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsProfitPositive}" Value="False">
                            <Setter Property="Background" Value="#E74C3C"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Total loss/profit" 
                           Foreground="White" Opacity="0.8" FontSize="14" Margin="0,0,0,5"/>

                <TextBlock Text="{Binding TotalProfit, StringFormat={}{0:+#,##0.00;-#,##0.00;0.00}}" 
                           Foreground="White" FontSize="36" FontWeight="Bold"/>
            </StackPanel>
        </Border>


        <Border Grid.Row="1" Grid.Column="0" 
                Background="White" CornerRadius="8" Padding="15" Margin="0,0,10,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Top Assets" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10"/>

                <ItemsControl Grid.Row="1" ItemsSource="{Binding TopMovers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding AssetSymbol}" FontWeight="Bold" Foreground="#34495E"/>
                                        <TextBlock Text="{Binding AssetName}" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1" Text="{Binding Value, StringFormat=C2}" 
                                               VerticalAlignment="Center" FontWeight="Bold" Foreground="#2980B9"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" 
                Background="White" CornerRadius="8" Padding="15" Margin="10,0,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Asset Allocation" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding Allocation}" BorderThickness="0" Background="Transparent">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Key}" Foreground="#34495E" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding Value, StringFormat=P1}" 
                                           FontWeight="Bold" Foreground="#27AE60" Margin="10,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

    </Grid>
</UserControl>