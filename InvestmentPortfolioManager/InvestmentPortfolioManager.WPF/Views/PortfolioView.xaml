<UserControl x:Class="InvestmentPortfolioManager.WPF.Views.PortfolioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:InvestmentPortfolioManager.WPF.MVVM"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:PortfolioViewModel}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="15" CornerRadius="5" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="Search (Name/Symbol):" Foreground="Gray" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="150" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="Risk Level:" Foreground="Gray" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding RiskLevels}" 
                              SelectedItem="{Binding SelectedRiskFilter}"
                              Width="100" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="Min Price:" Foreground="Gray" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding MinPriceFilter, TargetNullValue=''}" Width="80" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="Max Price:" Foreground="Gray" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding MaxPriceFilter, TargetNullValue=''}" Width="80" Padding="5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,2">

                    <Button Content="Filter" Command="{Binding FilterCommand}" 
                            Width="80" Height="28" Margin="0,0,10,0" Background="#3498DB" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Clear" Command="{Binding ClearFiltersCommand}" 
                            Width="80" Height="28" Background="#95A5A6" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Rectangle Width="1" Fill="#E0E0E0" Margin="15,5"/>

                    <Button Command="{Binding AddAssetCommand}" ToolTip="Add New Asset"
                            Content="Add Asset" 
                            Width="80" Height="28" Margin="0,0,10,0" 
                            Background="#27AE60" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Command="{Binding RemoveAssetCommand}" ToolTip="Remove Selected Asset"
                            Content="Remove" 
                            Width="80" Height="28" 
                            Background="#E74C3C" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </StackPanel>

                <Rectangle Width="1" Fill="#E0E0E0" Margin="15,5"/>

                <StackPanel VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="Set Alert Price:" Foreground="Gray" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SelectedAsset.LowPriceThreshold, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" Width="100" Padding="5" ToolTip="Select an asset in the list to edit its alert threshold"/>
                </StackPanel>
                
            </WrapPanel>
        </Border>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Assets}" 
                  SelectedItem="{Binding SelectedAsset}"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  Background="White"
                  BorderThickness="0"
                  RowHeight="35">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                    <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Symbol" Binding="{Binding AssetSymbol}" Width="Auto" MinWidth="80" FontWeight="Bold"/>

                <DataGridTextColumn Header="Name" Binding="{Binding AssetName}" Width="*" MinWidth="150"/>

                <DataGridTextColumn Header="Type" Binding="{Binding AssetType}" Width="Auto" MinWidth="100"/>

                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="Auto" MinWidth="80"/>

                <DataGridTextColumn Header="Purchase Price" Binding="{Binding PurchasePrice, StringFormat=C2}" Width="Auto" MinWidth="120"/>

                <DataGridTextColumn Header="Current Price" Binding="{Binding CurrentPrice, StringFormat=C2}" Width="Auto" MinWidth="120" FontWeight="Bold"/>

                <DataGridTextColumn Header="Value" Binding="{Binding Value, StringFormat=C2}" Width="Auto" MinWidth="120" Foreground="#2980B9" FontWeight="Bold"/>

                <DataGridTemplateColumn Header="Total Change" Width="Auto" MinWidth="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ValueChange, StringFormat='{}{0:+#,##0.00;-#,##0.00;0.00}'}" 
                                       FontWeight="Bold" VerticalAlignment="Center" Padding="5,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasPositiveChange}" Value="True">
                                                <Setter Property="Foreground" Value="#27AE60"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Alert Price" 
                    Binding="{Binding LowPriceThreshold, StringFormat=C2, TargetNullValue='-'}" 
                    Width="Auto" MinWidth="100"
                    IsReadOnly="True"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>