<UserControl x:Class="InvestmentPortfolioManager.WPF.Views.PortfolioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:InvestmentPortfolioManager.WPF.MVVM"
             xmlns:conv="clr-namespace:InvestmentPortfolioManager.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=vm:PortfolioViewModel}">

    <UserControl.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Zarządzanie Portfelem" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>

            <Border Background="#F8F9FA" Padding="12" CornerRadius="8" BorderBrush="#DEE2E6" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Szukaj aktywa:" VerticalAlignment="Center" Margin="5,0,15,0" FontWeight="SemiBold" Foreground="#495057"/>
                    <TextBox Grid.Column="1" 
                             Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                             Height="30" VerticalContentAlignment="Center" Padding="8,0"
                             ToolTip="Wpisz nazwę lub symbol..."/>
                </Grid>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,10">
            <Button Content="Pokaż: Wysokie Ryzyko" Command="{Binding FilterHighRiskCommand}" 
                    Margin="0,0,8,0" Padding="12,5" Background="#FFF3E0" Foreground="#E65100" BorderBrush="#FFE0B2"/>

            <Button Content="Sortuj: Najwyższa Wartość" Command="{Binding SortByValueCommand}" 
                    Margin="0,0,8,0" Padding="12,5" Background="#E8F5E9" Foreground="#2E7D32" BorderBrush="#C8E6C9"/>

            <Button Content="Resetuj Widok" Command="{Binding ResetFilterCommand}" 
                    Padding="12,5" Background="#F5F5F5" BorderBrush="#E0E0E0"/>
        </StackPanel>

        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding AssetsView}" 
                  SelectedItem="{Binding SelectedAsset}"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  BorderBrush="#DEE2E6"
                  RowHeight="35">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Symbol" Binding="{Binding AssetSymbol}" Width="85" FontWeight="Bold"/>
                <DataGridTextColumn Header="Nazwa Aktywa" Binding="{Binding AssetName}" Width="*"/>
                <DataGridTextColumn Header="Cena" Binding="{Binding CurrentPrice, StringFormat={}{0:N2} PLN}" Width="120"/>
                <DataGridTextColumn Header="Ilość" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Wartość" Binding="{Binding Value, StringFormat={}{0:N2} PLN}" Width="130">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Foreground" Value="#1B5E20" />
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Margin" Value="0,0,10,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="0,0,15,0">
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                                Visibility="{Binding SelectedAsset, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="Historia cen dla: " HorizontalAlignment="Center" Foreground="Gray"/>
                        <TextBlock Text="{Binding SelectedAsset.AssetName}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>

                        <ItemsControl ItemsSource="{Binding SelectedAsset.PriceHistory}" MaxHeight="100" Margin="0,10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="10" Foreground="#555" HorizontalAlignment="Center">
                                        <Run Text="{Binding Timestamp, StringFormat={}{0:HH:mm}}"/>: 
                                        <Run Text="{Binding Price, StringFormat={}{0:N2} PLN}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <TextBlock Text="Wybierz aktywo z listy, aby zobaczyć historię cen" 
                               VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#BBB"
                               Visibility="{Binding SelectedAsset, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverted}"/>
                </Grid>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <Button Content="+ Dodaj Testowe" Command="{Binding AddTestAssetCommand}" 
                        Height="35" Width="140" Margin="0,0,0,10" Background="#2196F3" Foreground="White" FontWeight="SemiBold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Usuń Wybrane" Command="{Binding RemoveAssetCommand}" 
                        Height="35" Width="140" Background="#FFEBEE" Foreground="#C62828" BorderBrush="#EF5350"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>