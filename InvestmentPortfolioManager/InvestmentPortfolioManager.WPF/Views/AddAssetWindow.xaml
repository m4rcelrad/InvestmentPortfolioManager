<Window x:Class="InvestmentPortfolioManager.WPF.Views.AddAssetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Asset" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Add New Asset" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Asset Type:" FontWeight="SemiBold"/>
                <ComboBox x:Name="TypeComboBox" Margin="0,5,0,15" Padding="5" SelectedIndex="0"
                          SelectionChanged="TypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Stock"/>
                    <ComboBoxItem Content="Bond"/>
                    <ComboBoxItem Content="Cryptocurrency"/>
                    <ComboBoxItem Content="Commodity"/>
                    <ComboBoxItem Content="RealEstate"/>
                </ComboBox>

                <TextBlock Text="Name:" FontWeight="SemiBold"/>
                <TextBox x:Name="NameBox" Margin="0,5,0,15" Padding="5"/>

                <TextBlock Text="Purchase Price:" FontWeight="SemiBold"/>
                <TextBox x:Name="PriceBox" Margin="0,5,0,15" Padding="5"/>

                <StackPanel x:Name="StandardAssetFields">
                    <TextBlock Text="Symbol (e.g. AAPL, BTC):" FontWeight="SemiBold"/>
                    <TextBox x:Name="SymbolBox" Margin="0,5,0,15" Padding="5"/>

                    <TextBlock Text="Quantity:" FontWeight="SemiBold"/>
                    <TextBox x:Name="QuantityBox" Margin="0,5,0,15" Padding="5"/>
                </StackPanel>

                <StackPanel x:Name="CommodityFields" Visibility="Collapsed">
                    <TextBlock Text="Unit:" FontWeight="SemiBold"/>
                    <ComboBox x:Name="UnitComboBox" Margin="0,5,0,15" Padding="5" SelectedIndex="0">
                        <ComboBoxItem Content="Ounce"/>
                        <ComboBoxItem Content="Gram"/>
                        <ComboBoxItem Content="Kilogram"/>
                        <ComboBoxItem Content="Barrel"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel x:Name="RealEstateFields" Visibility="Collapsed">
                    <TextBlock Text="Street:" FontWeight="SemiBold"/>
                    <TextBox x:Name="StreetBox" Margin="0,5,0,10" Padding="5"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="House Number:" FontWeight="SemiBold"/>
                            <TextBox x:Name="HouseNumberBox" Margin="0,5,0,10" Padding="5"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Flat Number (Optional):" FontWeight="SemiBold"/>
                            <TextBox x:Name="FlatNumberBox" Margin="0,5,0,10" Padding="5"/>
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="City:" FontWeight="SemiBold"/>
                            <TextBox x:Name="CityBox" Margin="0,5,0,10" Padding="5"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Zip Code:" FontWeight="SemiBold"/>
                            <TextBox x:Name="ZipCodeBox" Margin="0,5,0,10" Padding="5"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Country:" FontWeight="SemiBold"/>
                    <TextBox x:Name="CountryBox" Margin="0,5,0,15" Padding="5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Add" Click="AddButton_Click" Width="100" Height="30" Margin="0,0,10,0" Background="#27AE60" Foreground="White" FontWeight="Bold">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Cancel" Click="CancelButton_Click" Width="100" Height="30" Background="#E74C3C" Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>