<Window x:Class="InvestmentPortfolioManager.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:InvestmentPortfolioManager.WPF.MVVM"
        xmlns:views="clr-namespace:InvestmentPortfolioManager.WPF.Views"
        Title="Investment Portfolio Manager" Height="600" Width="900">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PortfolioViewModel}">
            <views:PortfolioView />
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#EEE" Margin="10">
            <Button Content="Dashboard" Margin="5" Padding="5"
                    Command="{Binding ShowDashboardCommand}" />
            <Button Content="Portfolio" Margin="5" Padding="5"
                    Command="{Binding ShowPortfolioCommand}" />

            <Separator Margin="10,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

            <Button Content="Zapisz dane" Margin="5" Padding="5"
                    Command="{Binding SaveDataCommand}" />
            <Button Content="Wczytaj dane" Margin="5" Padding="5"
                    Command="{Binding LoadDataCommand}" />

            <Separator Margin="10,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

            <Button Content="Symuluj rynek" Margin="5" Padding="10,5" 
                    Background="LightGreen" FontWeight="Bold"
                    Command="{Binding SimulatePricesCommand}" />
        </StackPanel>

        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>